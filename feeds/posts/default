        let currentQuestionIndex = 0;

        function loadQuestion(index) {
    const question = questions[index];
    document.getElementById('question-id').value = question.id;
    const numberedQuestionText = `${index + 1}. ${question.question_text}`;
    document.getElementById("question-text").innerHTML = `&lt;strong&gt;${numberedQuestionText}&lt;/strong&gt;`;
    document.getElementById("category-text").innerHTML = (question.category + " Quiz").toUpperCase();

    const questionImage = document.getElementById("question-image");
    const totalQuestions = questions.length;
    document.getElementById("image-label").innerText = `${index + 1} / ${totalQuestions}`;

    questionImage.onerror = () =&gt; {
        questionImage.src = `${baseUrl}uploads/logo/imgnotfound.png`;
        questionImage.style.display = 'block';
    };

    if (question.image_path?.trim()) {
        questionImage.src = `${baseUrl}${question.image_path}`;
        questionImage.style.display = 'block';
    } else {
        questionImage.src = `${baseUrl}uploads/logo/imgnotfound.png`;
        questionImage.style.display = 'block';
    }

    document.getElementById("option-a").innerHTML = `A. ${question.option_a}`;
    document.getElementById("option-b").innerHTML = `B. ${question.option_b}`;
    document.getElementById("option-c").innerHTML = `C. ${question.option_c}`;

    const options = document.querySelectorAll("#options p");
    options.forEach(option =&gt; {
        option.onclick = () =&gt; handleAnswer(option.id.slice(-1), question);
    });

    // Membacakan pertanyaan menggunakan speech synthesis
    // Membuat teks pertanyaan sesuai bahasa
const questionTextToSpeak = question.lang_text === 'id-ID' 
    ? `Pertanyaan: ${numberedQuestionText}. Pilihan jawabannya adalah: A. ${question.option_a}, B. ${question.option_b}, C. ${question.option_c}.`
    : `Question: ${numberedQuestionText}. Options are: A. ${question.option_a}, B. ${question.option_b}, C. ${question.option_c}.`;

// Memanggil fungsi untuk membaca teks pertanyaan
speakQuestion(questionTextToSpeak, question.lang_text || 'en-US');

}

function speakQuestion(text, lang) {
    const speech = new SpeechSynthesisUtterance(text);
    speech.lang = lang;
    speechSynthesis.speak(speech);
}




function speakText(text, lang = 'en-US') {
    const speech = new SpeechSynthesisUtterance(text);
    speech.lang = lang;
    speechSynthesis.speak(speech);
}

let score = 0; // Variabel untuk menyimpan skor

function loadNextQuestion() {
    const currentIndex = questions.findIndex(q =&gt; q.id == document.getElementById('question-id').value);
    const nextIndex = currentIndex + 1;

    if (nextIndex &lt; questions.length) {
        loadQuestion(nextIndex); // Memuat pertanyaan berikutnya
    } else {
        // Jika semua pertanyaan sudah dijawab, tampilkan skor akhir
        alert("Quiz selesai! Skor Anda: " + score);
    }
}

function handleAnswer(selectedOption, question) {
    const isCorrect = selectedOption.trim().toLowerCase() === question.answer.trim().toLowerCase();
    
    // Jika jawabannya benar, tambahkan skor
    if (isCorrect) {
        score++;
    }

    const selectedElement = document.getElementById(`option-${selectedOption.toLowerCase()}`);
    const selectedText = selectedElement.innerText; // Ambil teks lengkap dari opsi
    const correctElement = document.getElementById(`option-${question.answer.toLowerCase()}`);
    const correctText = correctElement.innerText; // Ambil teks lengkap jawaban benar

    let speechText;

    // Menentukan teks berdasarkan bahasa
    if (question.lang_text === 'id-ID') {
        speechText = isCorrect
            ? `Anda memilih ${selectedText}. Jawaban Anda benar!`
            : `Jawaban Anda salah. Anda memilih ${selectedText}. Jawaban yang benar adalah ${correctText}.`;
    } else { // Default ke bahasa Inggris
        speechText = isCorrect
            ? `You chose ${selectedText}. Your answer is correct!`
            : `Your answer is wrong. You chose ${selectedText}. The correct answer is ${correctText}.`;
    }

    // Memberikan efek pada opsi yang dipilih
    selectedElement.style.backgroundColor = 'orange'; // Warna oranye untuk opsi yang dipilih

    // Menambahkan ikon centang pada jawaban yang benar
    const feedbackIcon = document.createElement('span');
    if (isCorrect) {
        feedbackIcon.innerHTML = '✔️'; // Ikon centang untuk jawaban yang benar
    } else {
        // Ikon silang untuk jawaban yang salah, dan juga ceklis untuk jawaban yang benar
        feedbackIcon.innerHTML = '❌'; // Ikon silang untuk jawaban yang salah
        const correctIcon = document.createElement('span');
        correctIcon.innerHTML = '✔️'; // Ikon centang untuk jawaban yang benar
        correctElement.appendChild(correctIcon); // Menambahkan ikon centang pada jawaban yang benar
    }
    feedbackIcon.style.marginLeft = '10px'; // Memberikan jarak
    selectedElement.appendChild(feedbackIcon); // Menambahkan ikon pada elemen yang dipilih

    // Memutar teks dengan Speech Synthesis
    const speech = new SpeechSynthesisUtterance(speechText);
    speech.lang = question.lang_text;
    speech.onend = () =&gt; {
        // Setelah teks selesai dibacakan, lanjutkan ke pertanyaan berikutnya
        selectedElement.style.backgroundColor = ''; // Mengembalikan warna asli
        feedbackIcon.remove(); // Menghapus ikon setelah selesai
        if (!isCorrect) {
            correctElement.querySelector('span').remove(); // Menghapus ikon centang setelah selesai
        }

        loadNextQuestion(); // Lanjutkan ke pertanyaan berikutnya
    };

    // Memulai pembacaan teks
    speechSynthesis.speak(speech);
}







        // Load the first question when the page is ready
        loadQuestion(currentQuestionIndex);
    &lt;/script&gt;

