      let currentIndex = 0;
      let score = 0;

      function loadQuestion() {
          if (currentIndex &gt;= questions.length) {
              showScore();
              return;
          }

          const currentQuestion = questions[currentIndex];
          progressBar.style.width = `${((currentIndex + 1) / questions.length) * 100}%`;

          const img1 = option1Element.querySelector("img");
          const img2 = option2Element.querySelector("img");

          img1.src = currentQuestion.image_url_1;
          img2.src = currentQuestion.image_url_2;
          name1.textContent = currentQuestion.option_1;
          name2.textContent = currentQuestion.option_2;

          questionElement.textContent = currentQuestion.question_text;

          const questionSpeech = new SpeechSynthesisUtterance(currentQuestion.question_text);
          questionSpeech.lang = currentQuestion.lang_text;
          speechSynthesis.speak(questionSpeech);
      }

      window.selectOption = function(option) {
          const currentQuestion = questions[currentIndex];
          const correctOption = currentQuestion.correct_option;
          const selectedOptionText = option === 1 ? currentQuestion.option_1 : currentQuestion.option_2;
          const correctOptionText = correctOption === "1" ? currentQuestion.option_1 : currentQuestion.option_2;

          let responseText = "";

          if (currentQuestion.lang_text === "en-US") {
              if (String(option) === correctOption) {
                  score++;
                  responseText = `You selected option ${selectedOptionText}. Your answer is correct!`;
              } else {
                  responseText = `Your answer is incorrect, the correct answer is ${correctOptionText}.`;
              }
          } else if (currentQuestion.lang_text === "id-ID") {
              if (String(option) === correctOption) {
                  score++;
                  responseText = `Anda memilih opsi ${selectedOptionText}. Jawaban Anda benar!`;
              } else {
                  responseText = `Jawaban Anda salah, jawaban yang benar adalah ${correctOptionText}.`;
              }
          }

          const resultSpeech = new SpeechSynthesisUtterance(responseText);
          resultSpeech.lang = currentQuestion.lang_text;
          resultSpeech.onend = function() {
              currentIndex++;
              loadQuestion();
          };
          speechSynthesis.speak(resultSpeech);
      };

      function showScore() {
          questionElement.style.display = "none";
          option1Element.style.display = "none";
          option2Element.style.display = "none";
          progressBar.style.display = "none";
          scoreElement.textContent = score;
          scoreContainer.style.display = "block";
      }

      window.retryQuiz = function() {
          score = 0;
          currentIndex = 0;
          scoreContainer.style.display = "none";
          questionElement.style.display = "block";
          option1Element.style.display = "block";
          option2Element.style.display = "block";
          progressBar.style.display = "block";
          loadQuestion();
      };

      loadQuestion();
  })();
&lt;/script&gt;

